<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.17.xsd">

    <changeSet id="sources.table.create" author="anugumanov">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists schemaName="${schema.name}" tableName="sources"/>
            </not>
        </preConditions>
        <createTable schemaName="${schema.name}" tableName="sources" remarks="Магазины">
            <column name="id" type="BIGINT" autoIncrement="true" remarks="Идентификатор">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar" remarks="Название">
                <constraints nullable="false"/>
            </column>
            <column name="base_url" type="varchar" remarks="URL магазина">
                <constraints nullable="false"/>
            </column>
            <column name="create_dt" type="timestamp" defaultValue="now()" remarks="Дата создания">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <rollback>
            <dropTable schemaName="${schema.name}" tableName="sources"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
